<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".ui.MainActivity">

    <!-- incluimos Header negro para login y registro con logo y título -->
    <include
        layout="@layout/header_login_register"
        android:id="@+id/headerLogin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor para login -->
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/contenedorLogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/contenedor_blanco"
        android:padding="24dp"
        android:layout_marginTop="24dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etContrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnLogin"
        android:backgroundTint="@color/blackdarkbutton"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:minHeight="48dp"
        android:text="Iniciar sesion"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/linkRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registor"
        android:textColor="@color/purple_500"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true" />

    <!-- incluimos seprador  -->
    <include layout="@layout/seprador_o" />

    <!-- incluimos boton Gooogle -->
    <include layout="@layout/button_google" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>